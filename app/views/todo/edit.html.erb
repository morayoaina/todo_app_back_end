<div class="card">
    <h2>Edit this todo...</h2>
    
    <form action="/todo/update/<%= @todo.id %>">
        <input name="description" type="text" value="<%= @todo.description %>">
        <input name="pomodoro_estimate" type="number" value="<%= @todo.pomodoro_estimate %>">
        <input type="submit" value="Edit todo">
        <a href="/todo/index" class="simple-link">Go back...</a>
    </form>
</div>